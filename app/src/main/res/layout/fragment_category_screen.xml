<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteSmoke"
        tools:context=".CategoryScreen">

        <include layout="@layout/back_button_screen"
            android:id="@+id/backButton"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/weAreHereToHelpYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/we_r_here_to_help"
            android:layout_marginTop="18dp"
            android:textSize="18dp"
            android:fontFamily="@font/circe"
            android:layout_marginStart="25dp"
            android:textColor="@color/sealBrown"
            app:layout_constraintTop_toBottomOf="@id/backButton"
            app:layout_constraintStart_toStartOf="parent"
            />
        <EditText
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="14dp"
            android:textColor="@color/darkGray"
            android:fontFamily="@font/circe"
            android:drawableStart="@drawable/search"
            android:padding="12dp"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@id/weAreHereToHelpYou"
            android:background="@drawable/search_drawable"
            android:layout_marginTop="12dp"
            android:hint="Search your query"
            android:layout_marginHorizontal="16dp"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryRecyclerView"
            app:layout_constraintTop_toBottomOf="@id/searchBox"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            tools:listitem="@layout/category_item"
            android:layout_height="30dp" />


        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/searchBox"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <include layout="@layout/shimer_category_layout"/>
                <include layout="@layout/shimer_category_layout"/>
                <include layout="@layout/shimer_category_layout"/>
                <include layout="@layout/shimer_category_layout"/>
                <include layout="@layout/shimer_category_layout"/>
                <include layout="@layout/shimer_category_layout"/>

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>



        <TextView
            android:id="@+id/topQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/top_questions"
            android:fontFamily="@font/circe"
            android:textColor="@color/sealBrown"
            android:layout_marginTop="21dp"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/categoryRecyclerView"
            android:layout_marginStart="25dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/questionRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/question_each_item"
            app:layout_constraintTop_toBottomOf="@id/topQuestion"

            />
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerContainerQuestion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topQuestion"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="25dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <include layout="@layout/shimer_questions_layout"/>
                <include layout="@layout/shimer_questions_layout"/>
                <include layout="@layout/shimer_questions_layout"/>
                <include layout="@layout/shimer_questions_layout"/>
                <include layout="@layout/shimer_questions_layout"/>
                <include layout="@layout/shimer_questions_layout"/>
                <include layout="@layout/shimer_questions_layout"/>



            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>