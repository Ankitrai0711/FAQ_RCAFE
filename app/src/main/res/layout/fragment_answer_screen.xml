<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AnswerScreen">


        <include layout="@layout/back_button_screen"
            android:id="@+id/view"
            />


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/view"
    app:layout_constraintStart_toStartOf="parent"
    >



        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="10dp"

            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                >


            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/place_a_delivery_order"
                android:textColor="@color/sealBrown"
                android:textSize="17dp"
                android:layout_marginTop="21dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/circe"
                />


            <TextView
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/step_1"
                app:layout_constraintTop_toBottomOf="@id/question"
                app:layout_constraintStart_toStartOf="@id/question"
                android:textColor="@color/tauprGrey"
                android:maxLines="23"
                android:ellipsize="end"
                android:layout_marginVertical="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="14sp"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="137dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:id="@+id/stillNotRequired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/circe"
                android:paddingVertical="16dp"
                android:text="@string/still_not_resolved"
                android:textColor="@color/sealBrown"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/wasThisHelpful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/circe"
                android:paddingEnd="20dp"
                android:paddingVertical="16dp"
                android:text="@string/was_this_helpful"
                android:textColor="@color/sealBrown"
                android:textSize="14dp" />

                <TextView
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/wasThisHelpful"
                    app:layout_constraintBottom_toBottomOf="@id/wasThisHelpful"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/yes"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="@id/yes"
                    app:layout_constraintTop_toBottomOf="@id/yes"
                    app:layout_constraintEnd_toStartOf="@id/yes"
                    android:background="@drawable/no"
                    android:layout_marginRight="20dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>